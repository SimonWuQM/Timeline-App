<?xml version="1.0" encoding="UTF-8"?>
<manifest android:versionCode="1" android:versionName="1.0"
    package="com.fabula.android.timeline" xmlns:android="http://schemas.android.com/apk/res/android">
    <application android:debuggable="true" android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:label="@string/app_name"
            android:name="TimelineActivity" android:screenOrientation="landscape" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
         <activity android:name="DashboardActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
                <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="image/*"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="video/*"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="audio/*"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
            <intent-filter>
                <action android:name="share"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
         </activity>
         
        <activity android:label="@string/create_note_name"
            android:name=".NoteActivity" android:screenOrientation="landscape"/>
            
        <activity android:label="@string/app_name"
            android:name=".ProfileActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar">
        </activity>
            
            
           <provider
            android:authorities="com.fabula.android.timeline.providers.ExperienceProvider" android:name="com.fabula.android.timeline.providers.ExperienceProvider"/>
        <provider
            android:authorities="com.fabula.android.timeline.providers.EventProvider" android:name="com.fabula.android.timeline.providers.EventProvider"/>
        <provider
            android:authorities="com.fabula.android.timeline.providers.NoteProvider" android:name="com.fabula.android.timeline.providers.NoteProvider"/>
        <provider
            android:authorities="com.fabula.android.timeline.providers.EventItemProvider" android:name="com.fabula.android.timeline.providers.EventItemProvider"/>
        <provider
            android:authorities="com.fabula.android.timeline.providers.PictureProvider" android:name="com.fabula.android.timeline.providers.PictureProvider"/>
        <provider
            android:authorities="com.fabula.android.timeline.providers.BaseContentProvider" android:name="com.fabula.android.timeline.providers.BaseContentProvider"/>
