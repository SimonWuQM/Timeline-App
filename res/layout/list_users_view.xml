<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="?android:attr/listPreferredItemHeight" 
  android:layout_width="fill_parent"
  android:padding="6dip">
  
      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"

        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"

        android:src="@drawable/icon" android:id="@+id/userlisticon" android:layout_centerVertical="true"/>

    <TextView
       	android:id="@+id/userlist_text"
   		android:paddingLeft="6dip"
		android:textColor="@color/Black" 
		android:layout_toRightOf="@+id/userlisticon" android:layout_height="fill_parent" android:gravity="center_vertical" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content"/>
		
    <CheckBox android:layout_height="wrap_content" android:id="@+id/user_list_checkbox" android:layout_width="wrap_content" android:layout_alignParentRight="true"></CheckBox>
		
  </RelativeLayout>
