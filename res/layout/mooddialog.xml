<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
  android:layout_height="200dip" android:layout_width="200dip">


 <LinearLayout  
  android:background="@color/Header" android:id="@+id/mooddialogheader" android:layout_width="match_parent" android:layout_height="30dip">
     <TextView android:id="@+id/moodidalogTitle" android:textColor="@color/White" android:layout_width="wrap_content" android:textSize="24dip" android:text="Mood" android:layout_height="wrap_content" android:paddingRight="5dip"></TextView>
     <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:orientation="vertical" android:layout_gravity="right">
         <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="timestamp" android:id="@+id/moodDialogTimestamp" android:layout_gravity="right" android:textSize="10dip"></TextView>
         <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right" android:id="@+id/moodDialogUsername" android:text="username" android:marqueeRepeatLimit="marquee_forever" android:textSize="10dip"></TextView>
     </LinearLayout>
 </LinearLayout>
  
<LinearLayout
  android:orientation="vertical" android:background="@color/White" android:layout_below="@+id/mooddialogheader" android:layout_height="fill_parent" android:layout_width="fill_parent">
    <ImageView android:src="@drawable/icon" android:id="@+id/mooddialogpicture" android:layout_gravity="center_horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent" android:scaleType="fitXY"></ImageView>
</LinearLayout>
</RelativeLayout>